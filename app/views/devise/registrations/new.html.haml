= image_tag 'form-img.png', class: 'form-image'
.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :Account
      %br/
      = f.text_field :username, autofocus: true, autocomplete: "username", class: 'text'
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'text'
    .field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'text'
    .field
    .actions
      = f.submit "CREATE ACCOUNT", class: 'btn-primary'
= image_tag 'bottom-bar', class: 'bottom-bar'
