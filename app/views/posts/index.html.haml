.container
  = link_to new_post_path, data: {"turbolinks" => false} do
    .post-create-icon
      = image_tag 'photo-camera.png'
  .post-posts
    - @posts.each do |post|
      .post-post
        .post-post-header
          .post-avatar
            = image_tag url_for(@profile.avatar)
          .post-info
            .post-username
              %p= post.user.username
            .post-post-time
              = "#{time_ago_in_words(post.created_at)}前"

        .post-images
          - if post.images.attached?
            .main-image
              = image_tag post.images.first
            .side-images
              - post.images.drop(1).each do |image|
                = image_tag image

        .post-actions
          -if user_signed_in?
            - if current_user.has_liked?(post)
              .like-button
                = link_to post_like_path(post), data: { method: 'delete' } do
                  = image_tag 'heart-active.svg'
            - else
              .like-button
                = link_to post_like_path(post), data: { method: 'post' } do
                  = image_tag 'heart.svg'
            .comment-button
              = image_tag 'comment.png'
            .share-button
              = link_to "https://x.com/share?url=#{ request.url }&text=#{post.content}", target: '_blank' do
                = image_tag 'share.png'

        .post-comments
          %p= "いいね数 :  #{post.like_count}"
          %p= "#{post.user.username}  #{post.content}"
